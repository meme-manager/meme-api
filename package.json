{
  "name": "meme-api",
  "version": "1.0.0",
  "description": "Cloudflare Workers API for Meme Manager",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "npm run db:migrations:apply && wrangler deploy",
    "deploy:manual": "./deploy.sh",
    "deploy:prod": "wrangler deploy --env production",
    "db:migrations:apply": "wrangler d1 migrations apply DB --remote",
    "db:migrate": "wrangler d1 execute meme-db --file=./migrations/0001_init.sql --remote",
    "db:migrate:local": "wrangler d1 execute meme-db --file=./migrations/0001_init.sql --local",
    "tail": "wrangler tail",
    "build": "echo 'No build step needed'"
  },
  "cloudflare": {
    "bindings": {
      "JWT_SECRET": {
        "description": "生成随机密钥: `openssl rand -hex 32` 或 `node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\"`"
      }
    }
  },
  "dependencies": {
    "hono": "^4.0.0",
    "jose": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0",
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
